@model VirtualClassroom.Models.ComputerViewModel

@{
    ViewBag.Title = "Administration";
    ViewBag.Name = Model.Name;
}

@if (!String.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else
{
    <div id="divTarget" class="adminContainer"></div>

    @Scripts.Render("~/bundles/react")
    @Scripts.Render("~/vc/global")
    @Scripts.Render("~/vc/forms")
    @Scripts.Render("~/vc/admin")

    <script type="text/javascript">
        $(document).ready(function () {
            var admin = new VC.Admin.InitClassrooms('divTarget', '@Model.ClassroomId', '@Model.ActionUrl');
        });
    </script>
}