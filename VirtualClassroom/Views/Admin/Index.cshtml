@{
    ViewBag.Title = "Admin";
    ViewBag.Name = "Virtual Classroom - Administration";
}


<div id="divTarget" class="adminContainer"></div>

@Scripts.Render("~/bundles/react")
@Scripts.Render("~/vc/global")
@Scripts.Render("~/vc/admin")

<script type="text/javascript">
    $(document).ready(function () {   
        var a = new VC.Admin.InitAdministration('divTarget', '@Url.Action()');
    });   
</script>

<script>
    $(document).ajaxComplete(function ()
    {
        $('.table tbody tr').each(function (i, row) {
            var box = $(this).find("td:nth-child(3)").text();
            
            if (box == "1" || box == "True") {
                    $(this).find('.showEnableClass').hide();
                    $(this).find('.showDisableClass').show();                 
                }

                else {
                    $(this).find('.showDisableClass').hide();
                    $(this).find('.showEnableClass').show();                    
                    }
                });        
        });
</script>