<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Virtual Classroom</title>

    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/less")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/pageheader/components-rounded.css" rel="stylesheet" />
    <link href="~/Content/pageheader/darkblue.css" rel="stylesheet" />
    <link href="~/Content/pageheader/layout.css" rel="stylesheet" />


    <link href="~/Content/bootstrap-glyphicons/bootstrap.icon-large.css" rel="stylesheet" />
    <style>
        .body-class {
            margin-top: 60px;
        }

        .divBody {
            margin-top: 20px;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")

</head>

<body id="Body1" class="lightBody">  
    @{
        var viewbagItem = string.Empty;
        if (@ViewBag.Name==string.Empty || @ViewBag.Name==null)
        {
            viewbagItem = @ViewBag.Title;
        }
        else
        {
            viewbagItem = @ViewBag.Name;
        }
    }

    <div id="DivBody1" class="divBody">
        <div>
            <header id="Header1">
                <div class="col-md-12" id="login-bar">
                    <div class="row">
                        <div class="col-md-8">
                            <h2 id="h2-viewbag-name">@viewbagItem</h2>
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>



                <hr />
            </header>
        </div>


        <div class="body-class">
            @RenderBody()

            <footer id="Footer1">
                <hr />
                <p id="copyright">&copy; @DateTime.Now.Year - Virtual Classroom</p>
            </footer>
        </div>
    </div>

</body>
</html>
