@model IEnumerable<VirtualClassroom.Models.Classroom>


@{
    ViewBag.Title = "Home";
    ViewBag.Name = "Virtual Classroom";
}

<div class="homeContainer">
    <div style="text-align:right"><h4>@Html.ActionLink("Administration", "Index", "Admin", routeValues: new { }, htmlAttributes: new { })</h4></div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <ul>
                    <li>
                        <h4>@Html.Label(item.name)</h4>
                        <ul>
                            <li>
                                @Html.ActionLink("Admin computer", "Index", "AC", routeValues: new { classroomId = item.id }, htmlAttributes: new { })
                            </li>
                        </ul>

                        @foreach (var sc in item.seats)
                        {
                            <ul>
                                <li>
                                    @Html.ActionLink(sc.name, "Index", "SC", routeValues: new { classroomId = item.id, id = sc.id }, htmlAttributes: new { })
                                    <ul>
                                        @{
                                            for (int i = 0; i < sc.students.Count; i++)
                                            {
                                                var address = "";
                                                if (sc.students[i].address1 != null)
                                                {
                                                    address = sc.students[i].address1;
                                                }
                                                if (sc.students[i].State != null)
                                                {
                                                    address = address+", "+sc.students[i].State;
                                                }
                                                if (sc.students[i].City != null)
                                                {
                                                    address = address + ", " + sc.students[i].City;
                                                }
                                                if (sc.students[i].Country != null)
                                                {
                                                    address = address + ", " + sc.students[i].Country;
                                                }
                                                if (sc.students[i].ZipCode != null)
                                                {
                                                    address = address + "-" + sc.students[i].ZipCode;
                                                }
                                                
                                                if (address != "")
                                                {
                                                    <li>@Html.ActionLink(sc.students[i].name + ", " + address, "Index", "PC", routeValues: new { classroomId = item.id, id = sc.students[i].id }, htmlAttributes: new { })</li>
                                                }
                                                else
                                                {
                                                    <li>@Html.ActionLink(sc.students[i].name, "Index", "PC", routeValues: new { classroomId = item.id, id = sc.students[i].id }, htmlAttributes: new { })</li>
                                                }
                                            }
                                        }
                                    </ul>
                                </li>
                            </ul>
                        }
                        @if (item.teachers.Count > 0)
                        {
                            <p>Teacher</p>
                            foreach (var tc in item.teachers)
                            {

                                <ul>
                                    <li>@Html.ActionLink(tc.name, "Index", "TC", routeValues: new { classroomId = item.id, id = tc.id }, htmlAttributes: new { })</li>
                                </ul>
                            }
                        }
                        
                        @if (item.moderators.Count>0)
                        { 
                            <p>Moderator</p>
                            foreach (var moderator in item.moderators)
                            {

                                <ul>
                                    <li>@Html.ActionLink(moderator.name, "Index", "Moderator", routeValues: new { classroomId = item.id, id = moderator.id }, htmlAttributes: new { })</li>
                                </ul>
                            }
                        }
                        @if (item.featureds.Count > 0)
                        {
                            <p>Featured Computer</p>
                            foreach (var fc in item.featureds)
                            {
                                <ul>
                                    <li>@Html.ActionLink(fc.name, "Index", "FC", routeValues: new { classroomId = item.id, id = fc.id }, htmlAttributes: new { })</li>
                                </ul>
                            }
                        }
                      
                    </li>
                </ul>
            </div>
        }
    </div>

</div>